<div class="container">

  <h2>Añadir un famoso</h2>

  <div class="row justify-content-center">

    <div class="col-md-8">

      <form action="/celebrities/add" method="POST">
        <div class="form-group">
          <label for="field1">Nombre: </label>
          <input type="text" class="form-control" id="field1" name="name">
        </div>
        <div class="form-group">
          <label for="field2">Ocupación: </label>
          <input type="text" class="form-control" id="field2" name="occupation">
        </div>
        <div class="form-group">
          <label for="field3">Frase: </label>
          <input type="text" class="form-control" id="field3" name="catchPhrase">
        </div>

        <button type="submit" class="btn btn-dark">Añadir un famoso</button>
      </form>
      <p>
        <a href="/celebrities">Volver</a>
      </p>
    </div>
  </div>
</div>