<div class="container">

  <h2>Modificar una película</h2>

  <div class="row justify-content-center">

    <div class="col-md-8">

      <form action="/movies/edit?movId={{_id}}" method="POST">
        <div class="form-group">
          <label for="field1">Título: </label>
          <input type="text" class="form-control" id="field1" name="title" value="{{title}}">
        </div>
        <div class="form-group">
          <label for="field2">Género: </label>
          <input type="text" class="form-control" id="field2" name="genre" value="{{genre}}">
        </div>
        <div class="form-group">
          <label for="field3">Trama: </label>
          <input type="text" class="form-control" id="field3" name="plot" value="{{plot}}">
        </div>

        <button type="submit" class="btn btn-dark">Modificar una película</button>
        <p>
          <a href="/movies">Volver</a>
        </p>
      </form>

    </div>
  </div>
</div>